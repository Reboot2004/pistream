{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "dist/main",
        "rootDir": "app",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ]
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}